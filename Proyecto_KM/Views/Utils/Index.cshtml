@{
    ViewBag.Title = "Reportes";
}

<div class="card mt-4 ml-auto mr-auto" style="box-shadow: 0px 2px 6px 0px rgba(0,0,0,0.3); width:40%;">

    <div class="card-body m-auto text-center">
        <form method="post" action="@Url.Action("Descargar", "Utils")" class="d-flex flex-column align-items-center text-center">
            <div class="form-group">
                <h3>Descargar Reportes</h3>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Descargar</button>
            </div>

            <hr />

        </form>
    </div>
</div>






