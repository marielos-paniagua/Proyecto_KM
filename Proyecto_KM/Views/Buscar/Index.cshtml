@{
    ViewBag.Title = "Buscar";
}

<div class="container-fluid">
    <div class="row">
        <div class="d-none d-sm-none d-md-block col-md-5 svg_login"></div>
        <div class="card col-12 col-sm-12 col-md-7" style="box-shadow: 0px 2px 6px 0px rgba(0,0,0,0.3); width:40%;">
            <div class="card-body m-auto text-center">
                <form method="post" action="@Url.Action("Index", "Buscar")" class="d-flex flex-column align-items-center text-center">
                    @{
                        if (TempData["mensajeResultado"] == null || TempData["mensajeResultado"] == "")
                        {
                            <div></div>
                        }
                        else
                        {
                            <div class="alert alert-danger" role="alert">
                                <p>@TempData["mensajeResultado"]</p>
                            </div>
                        }
                    }

                    <div class="form-group">
                        <h3>Busqueda</h3>
                    </div>

                    <div class="form-group">
                        <label>Buscar por:</label>
                        <select class="form-control" name="tipoBusqueda" required>
                            <option value="nombre">
                                Nombre
                            </option>
                            <option value="apellido">
                                Apellido
                            </option>
                            <option value="DPI">
                                DPI
                            </option>
                        </select>
                    </div>

                    <nav class="navbar navbar-light bg-light">
                        <form class="form-inline">
                            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="Busqueda">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                            </svg>
                        </form>
                    </nav>

                    <hr />

                </form>
            </div>
        </div>
    </div>
</div>

