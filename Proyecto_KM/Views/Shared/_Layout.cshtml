@using Proyecto_KM.Utils;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        @{
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">TaskApp</a>            
        }

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse p-2" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @{
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Ingreso")">Ingresar paciente</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Agenda")">Agenda</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("buscar","Buscar")">Buscar paciente</a>
                    </li>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                    </svg>

                    }
                    </li>
                </ul>
            </div>
        </nav>
        <div class="">
            <main role="main" class="">
                @RenderBody()
            </main>
        </div>

        <script src="~/jquery/jquery.min.js"></script>
        <script src="~/twitter-bootstrap/js/bootstrap.js"></script>
        <script src="~/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>

        @RenderSection("Scripts", required: false)
    </body>
</html>
